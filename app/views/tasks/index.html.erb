<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
   <% completed = task.completed ? "fa-check-square" : "fa-square" %>
   <p><i class="far <%= completed %>"></i><%= link_to task.title, task_path(task) %>
    <%= link_to task_path(task), method: :delete, data: {confirm: "sure?"} do %>
      <i class="fa fa-trash-alt"></i>
    <% end %>

    </p>
  <% end %>
</ul



